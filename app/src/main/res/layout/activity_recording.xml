<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/metallic"
    tools:context=".note.RecordingActivity">

    <TextView
        android:text="Record Audio"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/design_default_color_secondary_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_record"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_red"
        android:drawableStart="@drawable/recordingbtn"
        android:text="Start Recording"/>

    <Button
        android:id="@+id/btn_stop_record"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/stopbtn"
        android:text="Stop Recording"
        android:background="@drawable/btn_rounded_red" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/btn_rounded_green"
        android:drawableStart="@drawable/videobtn"
        android:text="Play"/>

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/btn_rounded_green"
        android:drawableStart="@drawable/stoprecord"
        android:text="Stop"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/btn_rounded_blue"
        android:drawableStart="@drawable/saverecord"
        android:text="Save"/>

</LinearLayout>



